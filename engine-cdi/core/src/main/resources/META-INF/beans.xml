<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:weld="http://jboss.org/schema/weld/beans"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/beans_3_0.xsd
                        http://jboss.org/schema/weld/beans http://jboss.org/schema/weld/beans_1_1.xsd"
    version="3.0">
    <interceptors>
        <class>org.cibseven.bpm.engine.cdi.impl.annotation.CompleteTaskInterceptor</class>
        <class>org.cibseven.bpm.engine.cdi.impl.annotation.StartProcessInterceptor</class>
    </interceptors>
    <weld:scan>
      <!-- remove CdiJtaProcessEngineConfiguration if javax.transaction API is not available -->
      <weld:exclude name="org.cibseven.bpm.engine.cdi.CdiJtaProcessEngineConfiguration">
          <weld:if-class-available name="!javax.transaction.TransactionManager"/>
      </weld:exclude>
    </weld:scan>
</beans>